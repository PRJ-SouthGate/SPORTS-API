<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= stats[0].playerName %> Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #edf2f7;
            margin: 0;
            padding: 20px;
        }

        h1, h2 {
            color: #2b6cb0;
            text-align: center;
        }

        .stats-container {
            background: white;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .stats-container p {
            margin: 5px 0;
            font-size: 16px;
            color: #555;
        }

        .img-thumbnail {
            max-width: 200px;
            border-radius: 50%;
            margin-bottom: 20px;
        }

        form {
            max-width: 300px;
            margin: 40px auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            background-color: #2b6cb0;
            color: white;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }

        button:hover {
            background-color: #2c5282;
        }
    </style>
</head>
<body>
    <h1><%= stats[0].playerName %> Profile</h1>
    <h2>Statistics</h2>
    <% stats.forEach(function(stat) { %>
    <div class="stats-container">
        <img src="<%= stat.image %>" alt="<%= stat.playerName %>">
        <p>Season: <%= stat.season %></p>
        <p>Team: <%= stat.teamName %></p>
        <p>Goals: <%= stat.goals %></p>
        <p>Assists: <%= stat.assists %></p>
        <p>Rating: <%= stat.rating %></p>
        <!-- Additional statistics info can be added here -->
    </div>
    <% }); %>
    <form action="/soccer/updatePlayerStats" method="post">
        <input type="hidden" name="playerName" value="<%= playerName %>" />
        <input type="hidden" name="leagueId" value="<%= leagueId %>" />
        <input type="hidden" name="existence" value="<%= existence %>" />
        <button type="submit">Update Stats</button>
    </form>
</body>
</html>